<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_border">

    <ImageView
        android:id="@+id/hat_list_image"
        android:contentDescription="@string/hat_image_content_description"
        android:layout_width="62dp"
        android:layout_height="42dp"
        android:layout_margin="7dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/hat_list_image">

        <TextView
            android:id="@+id/hat_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hat_name"/>

        <TextView
            android:id="@+id/hat_list_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 poäng"/>

        <TextView
            android:id="@+id/hat_list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hatten är din"/>

    </LinearLayout>

</RelativeLayout>
