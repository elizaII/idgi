<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ProfileActivity"
    tools:showIn="@layout/app_bar_profile">
    <ImageView
        android:id="@+id/comment_imageView_profilePicture"
        android:gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_account_circle_black_24dp"/>
<RelativeLayout
    android:id="@+id/profile_relativeLayout_editName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/comment_imageView_profilePicture">
    <EditText
        android:id="@+id/profile_editText_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mitt Namn"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile_relativeLayout_editAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_relativeLayout_editName">
    <EditText
        android:id="@+id/profile_editText_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Mitt namn"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        </RelativeLayout>

    <TextView
        android:id="@+id/profile_textView_nrOfGets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="609 gets"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/profile_btn_toggleEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/profile_textView_myHats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mina hattar"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/profile_textView_nrOfGets"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/profile_relativeLayout_ownedHats"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/profile_textView_myHats">

    </RelativeLayout>

    <ToggleButton
        style="@style/menu_button"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_btn_toggleEdit"
        android:checked="false"
        android:onClick="toggleEditState"
        android:textOff="@string/profile_btn_edit"
        android:textOn="@string/profile_btn_save"
        android:layout_below="@+id/profile_relativeLayout_editAge"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
