    <ImageView
        android:id="@+id/reply_imageView_profilePicture"
        android:gravity="top"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_account_circle_black_24dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:maxHeight="80dp"
        android:padding="100dp"
        android:cropToPadding="true"
        android:rotation="180"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/circle_crop"
        android:layout_alignStart="@+id/circle_crop" />
    <ImageView
        android:id="@+id/circle_crop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/round"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/reply_author"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center|center_horizontal"
        android:layout_below="@+id/reply_imageView_profilePicture"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible"/>

