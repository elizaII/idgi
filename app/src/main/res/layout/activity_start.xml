<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    layout="@style/AppTheme.Base">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartActivity"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:background="@drawable/temp_logo"
        android:layout_gravity="center_horizontal"/>

    <Button
        style="@style/menu_button"
        android:text="@string/start_btn_find_course"
        android:id="@+id/BrowseButton"
        android:onClick="onStartButtonClick" />

    <Button
        style="@style/menu_button"
        android:text="@string/start_btn_log_in"
        android:id="@+id/LogInButton"
        android:onClick="onLogInButtonClick" />

    <Button
        style="@style/menu_button"
        android:text="@string/start_btn_create_account"
        android:id="@+id/CreateAccountButton"
        android:onClick="onCreateAccountButtonClick" />

    <Button
        style="@style/menu_button"
        android:text="@string/start_btn_account"
        android:id="@+id/AccountButton"
        android:onClick="onAccountButtonClick" />

    <Button
        style="@style/menu_button"
        android:text="Lesson"
        android:id="@+id/start_btn_lesson"
        android:onClick="onLessonButtonClick" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
    </ScrollView>
    <include
        layout="@layout/nav_drawer"/>

</android.support.v4.widget.DrawerLayout>