<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.idgi.BrowseActivity"
        tools:showIn="@layout/app_bar_browse">

        <include
            android:id="@+id/toolbar"
            layout="@layout/app_bar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ã„mnen"
            android:id="@+id/browse_btn_subject"
            android:layout_weight="1"
            android:textSize="25dp"
            android:onClick="onSubjectButtonClick"
            android:layout_above="@+id/browse_btn_school"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="66dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skolor"
            android:id="@+id/browse_btn_school"
            android:layout_weight="1"
            android:textSize="25dp"
            android:onClick="onSchoolButtonClick"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hitta Kurser"
            android:id="@+id/textView3"
            android:editable="false"
            android:textSize="50sp"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <include
        layout="@layout/nav_drawer"/>

</android.support.v4.widget.DrawerLayout>
