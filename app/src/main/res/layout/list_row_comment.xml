<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:longClickable="true"
    android:background="@drawable/list_border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kdÃ¶skr j LKWERhdf N sbjfdjksgfew  bwe bvjhsdfjs vwerv hjf s "
        android:textSize="20sp"
        android:id="@+id/comment_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/comment_author"
        android:layout_toRightOf="@+id/comment_author"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/comment_author" />

    <ImageView
        android:id="@+id/comment_imageView_profilePicture"
        android:gravity="top"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_account_circle_black_24dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:maxHeight="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_alignLeft="@+id/comment_text"
        android:padding="100dp"
        android:cropToPadding="true"
        android:rotation="180"
        />
    <ImageView
        android:id="@+id/circle_crop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/round"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/comment_imageView_profilePicture"
        android:layout_alignStart="@+id/comment_imageView_profilePicture" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/comment_author"
        android:textSize="25sp"
        android:layout_below="@+id/comment_imageView_profilePicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Svar:"
        android:id="@+id/replies"
        android:layout_alignTop="@+id/comment_author"
        android:layout_toRightOf="@+id/reply_textField"
        android:layout_toEndOf="@+id/reply_textField"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/replies_count"
        android:layout_alignTop="@+id/replies"
        android:layout_toRightOf="@+id/replies"
        android:layout_toEndOf="@+id/replies" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svara"
        android:id="@+id/reply_button"
        android:layout_alignBaseline="@+id/reply_textField"
        android:layout_alignBottom="@+id/reply_textField"
        android:layout_alignRight="@+id/comment_text"
        android:layout_alignEnd="@+id/comment_text"
        android:onClick="onReplyButtonClick" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reply_textField"
        android:layout_below="@+id/replies"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/reply_button"
        android:layout_toStartOf="@+id/reply_button"
        android:editable="true"
        android:enabled="true"
        android:focusable="true"
        android:hint="Skriv ett svar till kommentar." />

</RelativeLayout>